<h1>Listing Admins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>

        <td><%= link_to 'Show', admin %></td>
        <% if((!(admin.preadmin)) && !(admin.id == current_user.id))%>
        <td><%= link_to 'Delete', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<td><% if current_user.class.to_s == 'Admin' %></td>
<td><%= link_to 'Edit my profile', edit_admin_path(current_user) %></td>
      <td><% end %></td>
<%= link_to 'New Admin', new_admin_path %>
