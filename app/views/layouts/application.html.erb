<!DOCTYPE html>
<html>
<head>
  <title>LibSys</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <div id = 'error_explanation' class="notice" style="color:red">
      <h2>Message</h2>
      <ul>
        <li><%= flash[:notice] %></li>
      </ul>
    </div>
  <% end %>
<%= yield %>

</body>
</html>
